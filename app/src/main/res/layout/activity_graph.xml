<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_graph"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="metro.ourthingsee.activities.GraphActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/material_design_item_guide_padding"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    tools:text="16 Th2 2016" />

                <Spinner
                    android:id="@+id/spData"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/btnGo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/go"
                android:textColor="#ffffff"
                android:theme="@style/MyButton" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvGraphName"
        android:padding="@dimen/material_design_guide_padding"
        android:layout_above="@+id/labels"/>
    <RelativeLayout
        android:id="@+id/labels"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/tvRedLine"
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:background="#FFFF0000"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@+id/tvRedLine"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum allowed value"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvLine"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tvLineName"
                android:layout_toRightOf="@+id/tvLine"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature graph"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvGraphName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_stats"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:padding="@dimen/material_design_guide_padding"/>
</RelativeLayout>
